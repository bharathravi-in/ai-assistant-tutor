# Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/gov_teaching
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/gov_teaching

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, gemini, litellm
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# Application
APP_NAME="AI Teaching Assistant"
DEBUG=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Default Language
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,ta,te,kn,mr
